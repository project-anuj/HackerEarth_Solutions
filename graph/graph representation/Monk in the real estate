#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {   map<int,int> mp;
        int e;
        cin>>e;
        for(int i=0;i<e;i++)
        {
            int a,b;
            cin>>a>>b;
            mp[a]=1;
            mp[b]=1;
        }
        cout<<mp.size()<<endl;
    }
}
