/////////////////////////// depth first search//////////////////////////////

#include<bits/stdc++.h>
using namespace std;
vector<int> a[101];
int visited[101];

void dfs(int node)
{
	visited[node]=1;
	for(auto x:a[node])
	{
		if(visited[x]==0)
		{
			dfs(x);
		}
	}
}
int main()
{
	int n,e;
	cin>>n>>e;
	for(int i=1;i<=e;i++)
	{
		int x,y;
		cin>>x>>y;
		a[x].push_back(y);
		a[y].push_back(x);
	}
	int count=0;
	for(int i=1;i<=n;i++)
	{
		if(visited[i]==0)
		dfs(i),count++;
	}
	cout<<count<<endl;
}
